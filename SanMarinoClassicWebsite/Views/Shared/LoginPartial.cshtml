@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.EntityFrameworkCore
@using SanMarinoClassicWebsite.Auth

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager



@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" id="logoutForm"
          method="post" class="nav-link">
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item"><a asp-controller="Home" asp-action="Index" id="list" class="nav-link">Welcome @UserManager.GetUserName(User)!</a></li>
            <li class="nav-item"><a href="javascript:document.getElementById('logoutForm').submit()" id="list" class="nav-link">Log off</a></li>
        </ul>

    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a id="registerLink" asp-controller="Account" asp-action="Register" class="nav-link">Register</a></li>
        <li><a id="loginLink" asp-controller="Account" asp-action="Login" class="nav-link">Log in</a></li>
    </ul>
}